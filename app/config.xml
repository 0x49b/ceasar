<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ceasar.spot" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Spot ESP32 Controller</name>
    <description>
        Controller application for Spot Micro ESP32 model
    </description>
    <author email="guna@nakedcircuits.com" href="https://github.com/cholan2100/ceasar">
        Open source Spot Micro ESP32 developement project.
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
